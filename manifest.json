{
  "manifest_version": 2,
  "name": "Git Random",
  "short_name": "GitRandom",
  "description": "Git Random is a simple chrome extension that randomly selects a user from GitHub and tells you all about it.",
  "version": "1",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "*://*.github.com/*"
  ],
  "icons": {
    "16": "assets/img/icon16.png",
    "48": "assets/img/icon48.png",
    "128": "assets/img/icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "chrome_url_overrides": {
    "newtab": "gitrandom.html"
  },
  "homepage_url": "http://github.com/idnan",
  "options_page": "options.html",
  "browser_action": {
    "default_title": "GitRandom",
    "default_icon": "assets/img/icon128.png"
  }
}